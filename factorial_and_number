#include <stdio.h>
int factorial(int n) {
    if (n == 0 || n == 1) {
        return 1;
    }
    return n * factorial(n - 1);
}
int main() {
    int i, num;
    printf("Enter number of terms: ");
    scanf("%d", &num);
    double sum = 0;
    for (i = 1; i <= num; ++i) {
        sum += (double)factorial(i) / i;
    }
    printf("Sum of the series: %.2lf\n", sum);
    return 0;
}
